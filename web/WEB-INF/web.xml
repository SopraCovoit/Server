<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <!--Servlet USER -->

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>view.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/api/user</url-pattern>
    </servlet-mapping>

    <!--Servlet PATH -->

    <servlet>
        <servlet-name>PathServlet</servlet-name>
        <servlet-class>view.PathServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PathServlet</servlet-name>
        <url-pattern>/api/path</url-pattern>
    </servlet-mapping>

    <!--Servlet WORKPLACE -->

    <servlet>
        <servlet-name>WorkplaceServlet</servlet-name>
        <servlet-class>view.WorkplaceServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>WorkplaceServlet</servlet-name>
        <url-pattern>/api/workplace</url-pattern>
    </servlet-mapping>
    <!-- Servlet CONNECTION-->
    <servlet>
        <servlet-name>ConnectionServlet</servlet-name>
        <servlet-class>view.ConnectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnectionServlet</servlet-name>
        <url-pattern>/api/user/token</url-pattern>
    </servlet-mapping>
    <!-- Servlet USERWITH ID-->
    <servlet>
        <servlet-name>UserWithIdServlet</servlet-name>
        <servlet-class>view.UserWithIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserWithIdServlet</servlet-name>
        <url-pattern>/api/user/*</url-pattern>
    </servlet-mapping>
    <!-- Servlet WORKPLACE W ID-->
    <servlet>
        <servlet-name>WorkplaceWithIdServlet</servlet-name>
        <servlet-class>view.WorkplaceWithIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WorkplaceWithIdServlet</servlet-name>
        <url-pattern>/api/workplace/*</url-pattern>
    </servlet-mapping>
</web-app>